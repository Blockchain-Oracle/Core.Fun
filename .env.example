# Core Meme Platform Environment Variables
# Copy this file to .env and fill in the values for local development
# For production deployment in Coolify, configure these in the UI

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# Environment: development | staging | production
NODE_ENV=production

# Logging level: error | warn | info | debug
LOG_LEVEL=info

# ============================================
# SERVICE PORTS
# ============================================

# Frontend port
PORT_FRONTEND=3000

# API server port
PORT_API=3001

# WebSocket server port
PORT_WEBSOCKET=8081

# Telegram bot webhook port
PORT_TELEGRAM=3004

# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL connection details
POSTGRES_DB=core_meme_platform
POSTGRES_USER=core_user
POSTGRES_PASSWORD=

# Full database connection URL (auto-generated in Coolify)
DATABASE_URL=

# ============================================
# REDIS CONFIGURATION
# ============================================

# Redis password (optional, leave empty for no auth)
REDIS_PASSWORD=

# ============================================
# BLOCKCHAIN CONFIGURATION
# ============================================

# Network: mainnet | testnet
NETWORK=testnet

# Core blockchain RPC endpoint
CORE_RPC_URL=https://rpc.test2.btcs.network

# Smart contract addresses
MEME_FACTORY_ADDRESS=
TREASURY_ADDRESS=

# ============================================
# ADMIN CONFIGURATION
# ============================================

# Admin wallet private key (for contract interactions)
ADMIN_PRIVATE_KEY=

# ============================================
# SECURITY & AUTHENTICATION
# ============================================

# JWT secret for token signing (min 32 characters)
JWT_SECRET=

# JWT token expiration
JWT_EXPIRES_IN=7d

# Encryption secret for sensitive data (exactly 32 characters)
ENCRYPTION_SECRET=

# Signature secret for webhook validation
SIGNATURE_SECRET=

# ============================================
# TELEGRAM BOT CONFIGURATION
# ============================================

# Telegram bot token from @BotFather
TELEGRAM_BOT_TOKEN=

# Webhook URL for Telegram (optional, for production)
TELEGRAM_WEBHOOK_URL=

# Comma-separated list of admin Telegram user IDs
TELEGRAM_ADMIN_IDS=

# ============================================
# CORS & SECURITY
# ============================================

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=

# ============================================
# RATE LIMITING
# ============================================

# Maximum requests per window
RATE_LIMIT_MAX=100

# Rate limit window in milliseconds
RATE_LIMIT_WINDOW_MS=60000

# ============================================
# MONITORING
# ============================================

# Blockchain monitoring interval in milliseconds
MONITOR_INTERVAL_MS=10000

# Number of block confirmations required
BLOCK_CONFIRMATION_COUNT=3

# ============================================
# COOLIFY SPECIFIC
# ============================================

# These are automatically set by Coolify, do not configure manually
# COOLIFY_FQDN=
# COOLIFY_URL=
# SOURCE_COMMIT=