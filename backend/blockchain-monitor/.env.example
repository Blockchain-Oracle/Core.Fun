# Network Configuration
NETWORK=testnet # mainnet or testnet
NODE_ENV=development

# Core RPC Endpoints
CORE_MAINNET_RPC=https://rpc.coredao.org
CORE_TESTNET_RPC=https://rpc.test2.btcs.network

# WebSocket Endpoints (optional, for real-time monitoring)
# CORE_MAINNET_WS=wss://ws.coredao.org
# CORE_TESTNET_WS=wss://ws.test2.btcs.network

# Platform Contracts (UPDATE THESE WHEN DEPLOYED)
# MemeFactory Contracts
MEME_FACTORY_MAINNET=0x0000000000000000000000000000000000000000
MEME_FACTORY_TESTNET=0x0000000000000000000000000000000000000000
MEME_FACTORY_MAINNET_BLOCK=0 # Block number when deployed (for historical sync)
MEME_FACTORY_TESTNET_BLOCK=0

# Staking Contracts
STAKING_CONTRACT_MAINNET=0x0000000000000000000000000000000000000000
STAKING_CONTRACT_TESTNET=0x0000000000000000000000000000000000000000
STAKING_CONTRACT_MAINNET_BLOCK=0
STAKING_CONTRACT_TESTNET_BLOCK=0

# Treasury Contracts
TREASURY_CONTRACT_MAINNET=0x0000000000000000000000000000000000000000
TREASURY_CONTRACT_TESTNET=0x0000000000000000000000000000000000000000
TREASURY_CONTRACT_MAINNET_BLOCK=0
TREASURY_CONTRACT_TESTNET_BLOCK=0

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=core_meme_platform
POSTGRES_USER=core_user
POSTGRES_PASSWORD=core_secure_pass_2024

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=
REDIS_DB=0

# Monitoring Configuration
START_BLOCK=0 # Starting block for historical sync (0 = use current - 1000)
CONFIRMATIONS=3 # Number of block confirmations to wait
BATCH_SIZE=100 # Number of blocks to process in batch
RETRY_ATTEMPTS=3 # Number of retry attempts for failed operations
RETRY_DELAY=1000 # Delay between retries in milliseconds

# Alert Configuration
WEBHOOK_URLS= # Comma-separated webhook URLs for alerts
# TELEGRAM_BOT_TOKEN= # For Telegram alerts
# TELEGRAM_CHAT_ID= # Target chat for alerts

# Logging
LOG_LEVEL=info # debug, info, warn, error
LOG_FILE=blockchain-monitor.log

# Performance Tuning
RATE_LIMIT_WINDOW_MS=60000 # Rate limit window
RATE_LIMIT_MAX_REQUESTS=100 # Max requests per window

# Cache Configuration
CACHE_TTL_DEFAULT=60 # Default cache TTL in seconds
CACHE_TTL_TOKEN_INFO=300 # Token info cache TTL
CACHE_TTL_PRICE_DATA=30 # Price data cache TTL
CACHE_TTL_HOLDERS=600 # Token holders cache TTL
CACHE_TTL_TRANSACTIONS=120 # Transactions cache TTL