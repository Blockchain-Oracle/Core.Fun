{
  "name": "@core-meme-platform/blockchain-monitor",
  "version": "1.0.0",
  "description": "Real-time blockchain monitoring service for Core blockchain",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc || true",
    "start": "node dist/main.js",
    "start:prod": "NODE_ENV=production NETWORK=mainnet node dist/main.js",
    "start:testnet": "NODE_ENV=development NETWORK=testnet node dist/main.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "clean": "rimraf dist",
    "migrate": "knex migrate:latest",
    "migrate:make": "knex migrate:make",
    "migrate:rollback": "knex migrate:rollback"
  },
  "dependencies": {
    "@core-meme/shared": "workspace:*",
    "axios": "^1.6.2",
    "bull": "^4.11.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "eventemitter3": "^5.0.1",
    "ioredis": "^5.3.2",
    "knex": "^3.1.0",
    "p-queue": "^7.4.1",
    "pg": "^8.11.3",
    "redis": "^4.6.11",
    "winston": "^3.11.0",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "socket.io-client": "^4.8.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  }
}