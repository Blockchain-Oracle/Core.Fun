{
  "name": "core-meme-platform",
  "version": "1.0.0",
  "description": "Professional meme token launcher platform on Core blockchain",
  "private": true,
  "packageManager": "pnpm@10.13.1",
  "workspaces": [
    "backend/*",
    "telegram-bot",
    "shared",
    "contracts",
    "core.fun_Frontend"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:all": "npx concurrently -n \"api,monitor,websocket,telegram\" -c \"cyan,magenta,blue,red\" \"pnpm dev:api\" \"pnpm dev:monitor\" \"pnpm dev:websocket\" \"pnpm dev:telegram\"",
    "dev:api": "pnpm --filter @core-meme/api dev",
    "dev:monitor": "pnpm --filter @core-meme-platform/blockchain-monitor dev",
    "dev:websocket": "pnpm --filter @core-meme/websocket-server dev",
    "dev:telegram": "pnpm --filter @core-meme/telegram-bot dev",
    "build": "turbo run build",
    "build:production": "pnpm build && cd core.fun_Frontend && pnpm install && pnpm build",
    "start": "pm2-runtime start ecosystem.config.js --env production",
    "start:dev": "pm2 start ecosystem.config.js",
    "stop": "pm2 delete all",
    "restart": "pm2 restart all",
    "logs": "pm2 logs",
    "monit": "pm2 monit",
    "health": "pm2 list",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "deploy:contracts": "pnpm --filter @core-meme-platform/contracts deploy:testnet",
    "verify:contracts": "pnpm --filter @core-meme-platform/contracts verify:testnet",
    "deploy:mainnet": "pnpm --filter @core-meme-platform/contracts deploy:mainnet",
    "verify:mainnet": "pnpm --filter @core-meme-platform/contracts verify:mainnet",
    "distribute:revenue": "ts-node scripts/revenue-distribution.ts",
    "distribute:revenue:dry": "DRY_RUN=true ts-node scripts/revenue-distribution.ts"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^20.11.0",
    "concurrently": "^8.2.2",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "hardhat": "^2.22.7",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@napi-rs/canvas": "^0.1.59",
    "turbo": "^1.11.0"
  }
}