{
  "name": "core-meme-platform",
  "version": "1.0.0",
  "description": "Professional meme token launcher platform on Core blockchain",
  "private": true,
  "workspaces": [
    "backend/*",
    "telegram-bot",
    "websocket",
    "shared",
    "contracts"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:all": "npx concurrently -n \"api,trading,monitor,core-api,websocket,telegram\" -c \"cyan,yellow,magenta,green,blue,red\" \"pnpm dev:api\" \"pnpm dev:trading\" \"pnpm dev:monitor\" \"pnpm dev:core-api\" \"pnpm dev:websocket\" \"pnpm dev:telegram\"",
    "dev:api": "pnpm --filter @core-meme/api dev",
    "dev:trading": "pnpm --filter @core-meme-platform/trading-engine dev",
    "dev:monitor": "pnpm --filter @core-meme-platform/blockchain-monitor dev",
    "dev:core-api": "pnpm --filter @core-meme-platform/core-api-service dev",
    "dev:websocket": "pnpm --filter @core-meme/websocket-server dev",
    "dev:telegram": "pnpm --filter @core-meme/telegram-bot dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "deploy:contracts": "pnpm --filter @core-meme-platform/contracts deploy:testnet",
    "verify:contracts": "pnpm --filter @core-meme-platform/contracts verify:testnet",
    "deploy:mainnet": "pnpm --filter @core-meme-platform/contracts deploy:mainnet",
    "verify:mainnet": "pnpm --filter @core-meme-platform/contracts verify:mainnet"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^20.11.0",
    "concurrently": "^8.2.2",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "hardhat": "^2.22.7",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@napi-rs/canvas": "^0.1.59"
  }
}